{
   "manifest_version": 3,
   "name": "Remove Smart Punctuation",
   "description": "Removes smart punctuation because it's evil and must be destroyed",
   "version": "1.0",
   "icons": {
      "16": "img/quotes-16.png",
      "48": "img/quotes-48.png",
      "128": "img/quotes-128.png"
   },
   "background": {
      "service_worker": "background.js",
      "type": "module"
   },
   "action": {
      "default_icon": {
         "19": "img/quotes-19.png"
      },
      "default_title": "Remove smart punctuation, because it's evil"
   },
   "permissions": [
      "scripting",
      "activeTab"
   ],
   "host_permissions": [
      "http://*/*",
      "https://*/*"
   ]
}
